{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext", "dom"],
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/cjs",
    "declarationMap": true,
    "outDir": "./dist/cjs"
  },
  "compileOnSave": false,
  "exclude": ["node_modules"],
  "include": ["src"]
}
